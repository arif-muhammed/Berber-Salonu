@model IEnumerable<project.Models.Service>

@{
    ViewData["Title"] = "Services";
}

<h1>Services</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Service</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Duration</th>
            <th>Employees</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var service in Model)
        {
            <tr>
                <td>@service.Name</td>
                <td>@service.Price.ToString("F2")$</td>
                <td>@project.Helpers.TimeHelper.FormatDuration(service.Duration)</td>
                <td>
                    <ul>
                        @foreach (var employee in service.Employees)
                        {
                            <li>@employee.Name</li>
                        }
                    </ul>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@service.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@service.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
